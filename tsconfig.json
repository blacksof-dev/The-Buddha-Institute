{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": "./src",
    "outDir": "./build",
    "paths": {
      "assets": ["assets/*"],
      "statics": ["src/statics/*"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
    // "typeRoots": ["./node_modules/@types", "./types", "./types/assets"]
  },
  "include": ["src", "globals.d.ts", "razor.d.ts", "public/makedown"]
}
